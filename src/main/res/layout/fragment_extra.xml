<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ExtraFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ator_layout"
                        style="@style/MyTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ator_label"
                        android:textColorHint="@color/white"
                        app:boxBackgroundColor="@color/outline_box_gray"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeErrorColor="@color/red"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_search"
                        app:endIconTint="@color/white"
                        app:errorEnabled="true"
                        app:errorIconDrawable="@drawable/ic_error"
                        app:helperText=""
                        app:hintTextColor="@color/white"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@drawable/icon_selected">
    
    
                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autoCompleteTextViewAtores"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingStart="20dp"
                            android:textColor="@color/white"
                            android:inputType="textAutoComplete"
                            />
    

                    </com.google.android.material.textfield.TextInputLayout>


               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rv_poster"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">


               </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </ScrollView>

</FrameLayout>